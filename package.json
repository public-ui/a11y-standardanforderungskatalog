{
	"name": "@public-ui/standardanforderungskatalog",
	"version": "1.1.4",
	"private": "true",
	"description": "Standardanforderungskatalog f√ºr die Barrierefreiheit",
	"license": "EUPL-1.2",
	"homepage": "https://public-ui.github.io",
	"repository": "https://github.com/public-ui/standardanforderungskatalog",
	"bugs": {
		"url": "https://github.com/public-ui/kolibri/issues",
		"email": "kolibri@itzbund.de"
	},
	"author": {
		"name": "Informationstechnikzentrum Bund",
		"email": "kolibri@itzbund.de"
	},
	"scripts": {
		"clean": "git clean -f -d -X",
		"clear": "rimraf dist src/services/config src/services/locales",
		"copy": "cpy \"public/config/*.json\" \"src/services/config\" --dot && cpy \"public/locales/*.json\" \"src/services/locales\" --dot",
		"build": "npm run clear && npm run build:prepare && cross-env NODE_ENV=production webpack && npm run build:light",
		"build:prepare": "npm run copy && npm run excelToJson",
		"build:light": "cross-env NODE_ENV=production webpack",
		"depcheck": "depcheck --ignores=@commitlint/config-conventional,@leanup/cli-pwa,@leanup/git-hooks,@leanup/stack-webpack,ajv,tslib --skip-missing",
		"excelToJson": "node ./scripts/excelToJson.js",
		"format": "prettier --check {src,tests}/**",
		"glossary": "ts-node --esm ./scripts/importGlossary.mts",
		"kolibri:migrate": "kolibri migrate",
		"lint": "eslint \"{src,tests}/**/*.{html,js,json,jsx,ts,tsx,gql,graphql}\"",
		"serve": "cross-env NODE_ENV=development webpack serve --devtool=source-map --no-hot",
		"start": "npm run build:prepare && npm run serve -- --open",
		"xpostinstall": "npm-run-all postinstall:copy:* && npm run postinstall:remove",
		"postinstall:copy:components-assets": "cpy \"node_modules/@public-ui/components/assets/**/*\" public/assets --dot",
		"postinstall:copy:theme-assets": "cpy \"node_modules/@public-ui/theme-default/assets/**/*\" public/assets --dot",
		"postinstall:remove": "rimraf public/assets/{bpa-icons,font*,icofont,kreon,material*,noto*,roboto,tabler*}",
		"prepare:husky": "rimraf .husky && husky install && npm-run-all prepare:husky:*",
		"prepare:husky:commitlint": "husky add .husky/commit-msg \"npx commitlint --edit $1\"",
		"prepare:husky:depcheck": "husky add .husky/pre-push \"pnpm depcheck\"",
		"prepare:husky:format": "husky add .husky/pre-push \"pnpm format\"",
		"prepare:husky:lint": "husky add .husky/pre-commit \"pnpm lint\"",
		"prepare:husky:unused": "husky add .husky/pre-push \"pnpm unused\"",
		"unused": "knip",
		"update": "ncu -t minor -u && ncu"
	},
	"type": "module",
	"dependencies": {
		"@public-ui/components": "2.1.0",
		"@public-ui/react": "2.1.0",
		"@public-ui/theme-default": "2.1.0",
		"@public-ui/themes": "2.1.0",
		"csv-stringify": "6.4.6",
		"i18next": "23.11.3",
		"markdown-it": "14.1.0",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-i18next": "14.1.1",
		"react-router-dom": "6.23.0",
		"register-service-worker": "1.7.2"
	},
	"devDependencies": {
		"@leanup/git-hooks": "1.3.49",
		"@leanup/stack": "1.3.50",
		"@leanup/stack-react": "1.3.50",
		"@leanup/stack-webpack": "1.3.50",
		"@types/csv-stringify": "3.1.0",
		"@types/i18next": "13.0.0",
		"@types/markdown-it": "14.0.1",
		"@types/node": "ts5.4",
		"@types/node-fetch": "2.6.11",
		"@types/react": "18.3.1",
		"@types/react-dom": "18.3.0",
		"@typescript-eslint/eslint-plugin": "7.8.0",
		"@typescript-eslint/parser": "7.8.0",
		"@unocss/preset-mini": "0.59.4",
		"@unocss/webpack": "0.59.4",
		"ajv": "8.13.0",
		"chromedriver": "124.0.1",
		"cpy-cli": "5.0.0",
		"cross-env": "7.0.3",
		"depcheck": "1.4.7",
		"eslint-plugin-jsx-a11y": "6.8.0",
		"eslint-plugin-no-loops": "0.3.0",
		"raw-loader": "*",
		"eslint-plugin-react": "7.34.1",
		"knip": "5.11.0",
		"node-fetch": "3.3.2",
		"node-html-parser": "6.1.13",
		"npm-check-updates": "16.14.20",
		"npm-run-all": "4.1.5",
		"prettier": "3.2.5",
		"read-excel-file": "5.7.1",
		"rimraf": "3.0.2",
		"ts-node": "10.9.2",
		"tslib": "2.6.2",
		"typescript": "5.4.5"
	},
	"files": [
		"dist",
		"dist/assets/data/*.xlsx"
	],
	"publishConfig": {
		"registry": "https://npm.pkg.github.com"
	}
}
